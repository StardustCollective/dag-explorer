{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~*": ["src/*"]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "es6",
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
      "./config/**/@types"
    ],
    "lib": ["es6", "es2016.array.include", "es2017", "dom", "dom.iterable"],
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.json", "**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
